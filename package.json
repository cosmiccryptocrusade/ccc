{
  "name": "ccc",
  "version": "1.0.0",
  "description": "Cosmic Crypto Crusade",
  "main": "index.js",
  "private": true,
  "scripts": {
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "size": "yarn compile && npx hardhat size-contracts",
    "deploy:pass": "npx hardhat run scripts/deploy-pass.ts --network goerli",
    "deploy:factory": "npx hardhat run scripts/deploy-factory.ts --network goerli",
    "deploy:store": "npx hardhat run scripts/deploy-store.ts --network goerli",
    "deploy:init": "npx hardhat run scripts/post-deploy-init.ts --network goerli",
    "flatten:pass": "npx hardhat flatten contracts/CCCPass.sol > flatten/CCCPass.sol",
    "flatten:factory": "npx hardhat flatten contracts/CCCFactory.sol > flatten/CCCFactory.sol",
    "flatten:store": "npx hardhat flatten contracts/CCCStore.sol > flatten/CCCStore.sol",
    "clean": "npx hardhat clean",
    "sign:pass": "npx hardhat run scripts/sign-message.ts --network goerli",
    "test": "npx hardhat test",
    "test:full": "FULL_TEST=true npx hardhat test --logs"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.2",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "5.6.1",
    "hardhat": "^2.6.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@openzeppelin/contracts": "^4.3.0",
    "ethjs-util": "^0.1.6"
  }
}
